/*

Our default Jenkins pipeline we use to create our on-commit
snapshot builds of trueos-master branch.

*/

pipeline {
  agent { label 'TrueOS-Build-Snapshot' }

  environment {
    GH_ORG = 'trueos'
    GH_REPO = 'trueos'
    POUDRIERE_BASE = 'trueos-snap-pkgsafe-base'
    POUDRIERE_PORTS = 'trueos-snap-pkgsafe-ports'
    TRUEOS_VERSION = '13.0'
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Build') {
      post {
        always {
          archiveArtifacts artifacts: 'release/port-logs/latest/**', fingerprint: false
          archiveArtifacts artifacts: 'release/src-logs/**', fingerprint: false
        }
      }
      environment {
         SIGNING_KEY = credentials('a50f9ddd-1460-4951-a304-ddbf6f2f7990')
	 TRUEOS_MANIFEST="${env.WORKSPACE}/manifests/trueos-snapshot-pkgsafe.json"
      }
      steps {
        sh 'make ports'
      }
    }
    stage('ISO') {
      post {
        always {
          archiveArtifacts artifacts: 'release/iso-logs/**', fingerprint: false
        }
      }
      environment {
         SIGNING_KEY = credentials('a50f9ddd-1460-4951-a304-ddbf6f2f7990')
	 TRUEOS_MANIFEST="${env.WORKSPACE}/manifests/trueos-snapshot-pkgsafe.json"
      }
      steps {
        sh 'make iso'
      }
    }
    stage('Publish') {
      steps {
        sshagent (credentials: ['ef8c8aff-3b80-4a6a-9e0c-4d015bc5e945']) {
          sh 'ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null trueos@cdn1.tn.ixsystems.com mkdir -p /cdn/pkg.trueos.org/pkg/snapshot-pkgsafe/FreeBSD:13:amd64/latest || true'
          sh 'cd release/packages && rsync -av --delete-after --delay-updates -e "ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null" . trueos@cdn1.tn.ixsystems.com:/cdn/pkg.trueos.org/pkg/snapshot-pkgsafe/FreeBSD:13:amd64/latest/'
          sh 'ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null trueos@cdn1.tn.ixsystems.com mkdir -p /cdn/pkg.trueos.org/iso/snapshot-pkgsafe/ || true'
          sh 'rsync -av --delete-after --delay-updates -e "ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null" release/iso/ trueos@cdn1.tn.ixsystems.com:/cdn/pkg.trueos.org/iso/snapshot-pkgsafe/'
        }
      }
    }
  }
  post {
    success {
      script {
        cleanWs notFailBuild: true
      }
    }
  }
}
